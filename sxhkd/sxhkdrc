# Keybinds For Bspwm

# Bluetooth
alt + b
	blueberry
	~/.config/polybar/script/bluetooth.sh

# Captura de pamtalla simple
Print
	maim -m 1 captura-pantalla-"$(date '+%y%m%d-%H%M-%S').png"

# wm independent hotkeys
super + i
	~/.config/polybar/script/wifi.sh

super + BackSpace
	~/.config/polybar/script/power.sh

# File manager
super + e
	nautilus
	
super + w
	google-chrome-stable

# Ranger / ranger root
super + {_,shift +} r
	{kitty -e ranger,sudo -A kitty -e ranger} 

# terminal emulator
super + Return
	kitty

# Pavucontrol
super + c
	pavucontrol

alt + l
	betterlockscreen -l 

# Rofi
super + d
	rofi -show drun

# Change Rofi Theme
super + ctrl + e
        rofi-theme-selector

# Recargar por defecto bspwm sxhkd
super + alt {r,e}
	{bspc wm -r,pkill -USR1 -x sxhkd}

# Reloading Polybar
super + shift + s
	sh ~/.config/polybar/launch.sh

# KVM
super + v
	virt-manager

# Gedit
super + g
	gedit

# Telegram
super + t
	telegram-desktop

# Htop
super + h
	kitty -e htop

# Wifi-menu/nmtui
super + shift + w
	kitty -e nmtui

#
# bspwm hotkeys
#

# close window
super + q
	bspc node -c

# rotar ventanas 90° derecha / rotar 90º izquierda / ventana flotante / fijar ventana
super + {k,j,f,s}
	{bspc node @focused:/ -R 90,bspc node @focused:/ -R 270,bspc node focused -t \~floating,bspc node -g sticky}

# Fullscreen
super + shift + f
	 bspc node -t {fullscreen,tiled}

# mover ventana flotante
super + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# expander ventana
ctrl + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contraer ventana
ctrl + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# resize gaps de ventanas
super { ,+ shift }+ z
	bspc config window_gap $(($(bspc config window_gap) {+,-} 3))

ctrl + shift + {F7,F8,F6,F5}
	mpc {play,pause,next,prev}

# Menu de grabacion de video
super + shift + Print
	~/.config/polybar/script/grabacion.sh


# Monitor
alt + F6
	menu_monitor

#
# state/flags
#

# set the window state
super + {t,shift + t,s}
	bspc node -t {tiled,pseudo_tiled,floating}

# fullscreen/toggle
super + f
	bspc node -t {fullscreen} || \
	bspc node -t {tiled}

# floating/toggle
super + shift + space
	bspc node -t {floating} || \
	bspc node -t {tiled}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

super + z
	bspc node -g sticky

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
#super + {_,shift + }{1-9,0}
#	bspc {desktop -f,node -d} '^{1-9,10}'

# focus or send to the given desktop
super + {_,shift + } + {KP_End,KP_Down,KP_Next,KP_Left,KP_Begin,KP_Right,KP_Home,KP_Up,KP_Prior,KP_Add}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# Opening Apps

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
       	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

super + {1,2,3,4,5,6,7,8,9,0}
	bspc desktop -f {1,2,3,4,5,6,7,8,9,0}

super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'

# expand and collapse windows
super + ctrl + {Left,Down,Up,Right}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

super + alt + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
ctrl + alt + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}D

# Subir brillo
shift + Up
	xbacklight -inc 10

#Bajar brillo
shift + Down
	xbacklight -dec 10

XF86AudioRaiseVolume
        pactl set-sink-volume 0 +2%

XF86AudioLowerVolume
        pactl set-sink-volume 0 -2%

XF86AudioMute
    pactl set-sink-mute 0 toggle
    
    amixer -D pulse set Master 1+ toggle
    

